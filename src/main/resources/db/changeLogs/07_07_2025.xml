<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Statuses table -->
    <changeSet id="statuses" author="aiteginbaratov">
        <createTable tableName="statuses">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="primary_color" type="VARCHAR(255)"/>
            <column name="background_color" type="VARCHAR(255)"/>
            <column name="order_flag" type="BOOLEAN" defaultValue="false"/>
            <column name="product_flag" type="BOOLEAN" defaultValue="false"/>
        </createTable>
    </changeSet>

    <!-- Добавляем колонку status_id в таблицу orders для OneToOne связи -->
    <changeSet id="add-status-id-to-orders" author="developer">
        <addColumn tableName="orders">
            <column name="status_id" type="UUID"/>
        </addColumn>

        <addForeignKeyConstraint
                baseTableName="orders"
                baseColumnNames="status_id"
                constraintName="fk_orders_status"
                referencedTableName="statuses"
                referencedColumnNames="id"
                onDelete="SET NULL"/>
    </changeSet>

    <!-- Product status table (оставляем как есть для many-to-many связи продуктов со статусами) -->
    <changeSet id="create-product-statuses-table" author="developer">
        <createTable tableName="product_statuses">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="status_id" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="product_statuses"
                baseColumnNames="product_id"
                constraintName="fk_product_statuses_product"
                referencedTableName="products"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="product_statuses"
                baseColumnNames="status_id"
                constraintName="fk_product_statuses_status"
                referencedTableName="statuses"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>