    <changeSet id="create-product-memories" author="aiteginbaratov">
        <createTable tableName="product_memories">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="memory" type="varchar(50)">
