            </column>
            <column name="image_id" type="uuid">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="product_color_images"
                                 baseColumnNames="color_id"
                                 referencedTableName="product_colors"
                                 referencedColumnNames="id"
