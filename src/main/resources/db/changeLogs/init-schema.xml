                                 referencedColumnNames="id"
                                 constraintName="fk_product_sub_parameters_parameter"/>
    </changeSet>

    <!-- User image table -->
    <changeSet id="11" author="JekiChan08">
        <createTable tableName="user_image">
            <column name="id" type="uuid">
