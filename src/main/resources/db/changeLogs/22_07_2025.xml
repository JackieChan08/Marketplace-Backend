<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!--Добавление поля icon для Category-->
    <changeSet id="add-icon-columns-to-category" author="aiteginbaratov">
        <createTable tableName="category_icons">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="category_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="icon_id" type="uuid">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="category_icons"
                                 baseColumnNames="category_id"
                                 referencedTableName="categories"
                                 referencedColumnNames="id"
                                 constraintName="fk_category_icon_category"/>
        <addForeignKeyConstraint baseTableName="category_icons"
                                 baseColumnNames="icon_id"
                                 referencedTableName="files"
                                 referencedColumnNames="id"
                                 constraintName="fk_category_icon_files"/>
    </changeSet>

</databaseChangeLog>