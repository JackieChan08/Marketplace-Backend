<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Statuses table -->
    <changeSet id="statuses" author="aiteginbaratov">
        <createTable tableName="statuses">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="color" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <!-- Order status table -->
    <changeSet id="create-order-statuses-table" author="developer">
        <createTable tableName="order_statuses">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="order_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="status_id" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="order_statuses"
                baseColumnNames="order_id"
                constraintName="fk_order_statuses_order"
                referencedTableName="orders"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="order_statuses"
                baseColumnNames="status_id"
                constraintName="fk_order_statuses_status"
                referencedTableName="statuses"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>

    <!-- Product status table -->
    <changeSet id="create-product-statuses-table" author="developer">
        <createTable tableName="product_statuses">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="status_id" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="product_statuses"
                baseColumnNames="product_id"
                constraintName="fk_product_statuses_product"
                referencedTableName="products"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="product_statuses"
                baseColumnNames="status_id"
                constraintName="fk_product_statuses_status"
                referencedTableName="statuses"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>