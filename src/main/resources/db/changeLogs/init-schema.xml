            </column>
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp"/>
            <column name="is_wholesale" type="boolean"/>
            <column name="payment_method" type="varchar(20)" defaultValue="CASH" />
