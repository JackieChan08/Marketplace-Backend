                                 onDelete="CASCADE"/>

        <addForeignKeyConstraint baseTableName="product_color_images"
                                 baseColumnNames="image_id"
                                 referencedTableName="files"
                                 referencedColumnNames="id"
                                 constraintName="fk_product_color_images_files"
                                 onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="create-product-images-table" author="JekiChan08">
        <!-- Создаем новую таблицу product_images -->
        <createTable tableName="product_images">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="image_id" type="uuid">
